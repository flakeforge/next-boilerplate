{
  "name": "next-boilerplate",
  "type": "module",
  "version": "1.1.0",
  "private": true,
  "author": {
    "url": "https://flakeforge.com",
    "name": "FlakeForge team",
    "email": "dev@flakeforge.com"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start --port 3000",
    "prepare": "husky",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:strict": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "types": "tsc --noEmit",
    "typecheck": "tsc --noEmit --incremental false",
    "test": "jest",
    "analyze": "ANALYZE=true next build",
    "clean": "rm -rf node_modules package-lock.json .next",
    "reset": "pnpm clean && pnpm install"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "next": "^15.0.0",
    "next-intl": "^3.23.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint-react/eslint-plugin": "^1.53.1",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^15.0.0",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-config-next": "15.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-readable-tailwind": "^3.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  }
}
